<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- View формы wizard переноса тренировки -->
        <record id="view_training_booking_reschedule_wizard_form" model="ir.ui.view">
            <field name="name">final.training.booking.reschedule.wizard.form</field>
            <field name="model">final.training.booking.reschedule.wizard</field>
            <field name="arch" type="xml">
                <form string="Перенос тренировки">
                    <sheet>
                        <group>
                            <group string="Текущая информация">
                                <field name="booking_id" invisible="1"/>
                                <field name="booking_name" readonly="1" string="Тренировка"/>
                                <field name="sport_center_id" readonly="1"/>
                            </group>
                            <group string="Новое время">
                                <field name="date" required="1"/>
                                <field name="start_time" required="1" widget="float_time"/>
                                <field name="duration" required="1"/>
                                <field name="tennis_court_id" 
                                       options="{'no_open': True, 'no_create': True}"
                                       help="Оставьте пустым, если корт не меняется"/>
                            </group>
                        </group>
                        <group>
                            <field name="reschedule_reason" 
                                   placeholder="Укажите причину переноса тренировки..."/>
                        </group>
                        <field name="is_trainer" invisible="1"/>
                    </sheet>
                    <footer>
                        <button name="action_request_reschedule" 
                                string="Перенести" 
                                type="object"
                                class="oe_highlight"
                                icon="fa-calendar"
                                invisible="is_trainer"/>
                        <button name="action_request_reschedule" 
                                string="Отправить запрос на перенос" 
                                type="object"
                                class="oe_highlight"
                                icon="fa-calendar"
                                invisible="not is_trainer"/>
                        <button string="Отмена" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

