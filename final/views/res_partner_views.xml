<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Расширение формы клиента (res.partner) -->
        <record id="view_partner_form_final_balance" model="ir.ui.view">
            <field name="name">res.partner.form.final.balance</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Добавляем вкладку с балансом и историей транзакций -->
                <xpath expr="//notebook" position="inside">
                    <page string="Баланс и транзакции" name="balance_tab" groups="final.group_final_manager,final.group_final_director">
                        <group>
                            <group string="Баланс">
                                <field name="balance" widget="monetary"/>
                                <field name="balance_currency_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <button name="action_open_balance_deposit_wizard" 
                                        string="Пополнить баланс" 
                                        type="object"
                                        class="btn-primary"
                                        groups="final.group_final_manager,final.group_final_director"/>
                            </group>
                        </group>
                        <group>
                            <field name="balance_history_ids" nolabel="1">
                                <list string="История транзакций" editable="bottom">
                                    <field name="date"/>
                                    <field name="transaction_type"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="booking_id" string="Тренировка"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </group>
                    </page>
                </xpath>
                
                <!-- Добавляем поле баланса в основную форму (только для менеджера/директора) -->
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="balance" widget="monetary" groups="final.group_final_manager,final.group_final_director"/>
                    <field name="balance_currency_id" groups="final.group_final_manager,final.group_final_director" 
                           options="{'no_create': True, 'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>

        <!-- Расширение списка клиентов (res.partner) -->
        <!-- Временно отключено, так как структура базового view может отличаться -->
        <!-- Баланс отображается в форме клиента, что достаточно для функционала -->
        <!--
        <record id="view_partner_tree_final_balance" model="ir.ui.view">
            <field name="name">res.partner.list.final.balance</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="inside">
                    <field name="balance" widget="monetary" groups="final.group_final_manager,final.group_final_director"/>
                </xpath>
            </field>
        </record>
        -->
    </data>
</odoo>

