<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Views for trainer schedule -->
        <record id="view_final_trainer_schedule_calendar" model="ir.ui.view">
            <field name="name">final.trainer.schedule.calendar</field>
            <field name="model">final.trainer.schedule</field>
            <field name="arch" type="xml">
                <calendar string="Рабочее расписание тренера"
                          date_start="start_datetime"
                          date_stop="end_datetime"
                          color="center_id">
                    <field name="name"/>
                    <field name="center_id"/>
                </calendar>
            </field>
        </record>

        <record id="view_final_trainer_schedule_tree" model="ir.ui.view">
            <field name="name">final.trainer.schedule.tree</field>
            <field name="model">final.trainer.schedule</field>
            <field name="arch" type="xml">
                <list string="Рабочие слоты">
                    <field name="trainer_id"/>
                    <field name="center_id"/>
                    <field name="start_datetime"/>
                    <field name="end_datetime"/>
                    <field name="duration_hours" widget="float_time"/>
                </list>
            </field>
        </record>

        <record id="view_final_trainer_schedule_form" model="ir.ui.view">
            <field name="name">final.trainer.schedule.form</field>
            <field name="model">final.trainer.schedule</field>
            <field name="arch" type="xml">
                <form string="Рабочий слот тренера">
                    <sheet>
                        <group col="4" class="o_group_narrow">
                            <field name="trainer_id"
                                   options="{'no_open': True, 'no_create': True}"
                                   required="1"/>
                            <field name="center_id"
                                   options="{'no_open': True, 'no_create': True}"
                                   domain="[('id', 'in', trainer_id.trainer_center_ids.ids)]"
                                   required="1"/>
                        </group>
                        <group col="4" class="o_group_narrow">
                            <field name="start_datetime" required="1"/>
                            <field name="end_datetime" required="1"/>
                        </group>
                        <group>
                            <field name="duration_hours" widget="float_time" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_final_trainer_schedule_search" model="ir.ui.view">
            <field name="name">final.trainer.schedule.search</field>
            <field name="model">final.trainer.schedule</field>
            <field name="arch" type="xml">
                <search string="Рабочие слоты">
                    <field name="center_id"/>
                    <filter name="future"
                            string="Предстоящие"
                            domain="[('start_datetime', '&gt;=', context_today())]"/>
                    <separator/>
                    <group expand="0" string="Тренер">
                        <filter name="my"
                                string="Мои"
                                domain="[('trainer_id.user_id', '=', uid)]"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_final_trainer_schedule" model="ir.actions.act_window">
            <field name="name">Расписание тренера</field>
            <field name="res_model">final.trainer.schedule</field>
            <field name="view_mode">calendar,list,form</field>
            <field name="view_id" ref="view_final_trainer_schedule_calendar"/>
            <field name="views" eval="[(ref('view_final_trainer_schedule_calendar'), 'calendar'), (ref('view_final_trainer_schedule_tree'), 'list'), (ref('view_final_trainer_schedule_form'), 'form')]"/>
            <field name="context" eval="{}"/>
            <field name="search_view_id" ref="view_final_trainer_schedule_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Настройте рабочие дни и часы, в которые вы готовы проводить тренировки.
                </p>
            </field>
        </record>

        <!-- Views for trainer rates -->
        <record id="view_final_trainer_rate_tree" model="ir.ui.view">
            <field name="name">final.trainer.rate.tree</field>
            <field name="model">final.trainer.rate</field>
            <field name="arch" type="xml">
                <list string="Ставки тренеров">
                    <field name="trainer_id"/>
                    <field name="center_id"/>
                    <field name="training_type_id"/>
                    <field name="hour_rate"/>
                </list>
            </field>
        </record>

        <record id="view_final_trainer_rate_form" model="ir.ui.view">
            <field name="name">final.trainer.rate.form</field>
            <field name="model">final.trainer.rate</field>
            <field name="arch" type="xml">
                <form string="Ставка тренера">
                    <sheet>
                        <group col="4" class="o_group_narrow">
                            <field name="trainer_id"
                                   options="{'no_open': True, 'no_create': True}"
                                   required="1"/>
                            <field name="center_id"
                                   options="{'no_open': True, 'no_create': True}"
                                   domain="[('id', 'in', trainer_id.trainer_center_ids.ids)]"
                                   required="1"/>
                            <field name="training_type_id"
                                   options="{'no_open': True, 'no_create': True}"
                                   required="1"/>
                        </group>
                        <group>
                            <field name="hour_rate" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_final_trainer_rate_search" model="ir.ui.view">
            <field name="name">final.trainer.rate.search</field>
            <field name="model">final.trainer.rate</field>
            <field name="arch" type="xml">
                <search string="Ставки тренера">
                    <field name="center_id"/>
                    <field name="training_type_id"/>
                    <filter name="my_rates"
                            string="Мои ставки"
                            domain="[('trainer_id.user_id', '=', uid)]"/>
                </search>
            </field>
        </record>

        <record id="action_final_trainer_rate" model="ir.actions.act_window">
            <field name="name">Ставки тренера</field>
            <field name="res_model">final.trainer.rate</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_final_trainer_rate_tree"/>
            <field name="views" eval="[(ref('view_final_trainer_rate_tree'), 'list'), (ref('view_final_trainer_rate_form'), 'form')]"/>
            <field name="context" eval="{}"/>
            <field name="search_view_id" ref="view_final_trainer_rate_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Укажите ставки за час для каждого вида тренировки в привязанных спортивных центрах.
                </p>
            </field>
        </record>

        <!-- Форма личного кабинета тренера -->
        <record id="view_trainer_personal_cabinet_form" model="ir.ui.view">
            <field name="name">trainer.personal.cabinet.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Личный кабинет" create="0" delete="0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Личная информация">
                                <field name="name" readonly="1" string="Имя"/>
                                <field name="trainer_email" readonly="1" string="Почта"/>
                                <field name="trainer_login" readonly="1" string="Логин"/>
                                <field name="trainer_center_count" readonly="1" string="Количество СЦ"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Спортивные центры" name="page_centers">
                                <field name="trainer_center_ids" readonly="1" mode="list">
                                    <list string="Спортивные центры" create="0" delete="0">
                                        <field name="name"/>
                                        <field name="manager_name" string="Менеджер"/>
                                        <field name="work_time_start" widget="float_time"/>
                                        <field name="work_time_end" widget="float_time"/>
                                        <field name="tennis_court_count" string="Кортов"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Мои ставки" name="page_rates">
                                <field name="center_trainer_ids" readonly="1" mode="list">
                                    <list string="Ставки по центрам" create="0" delete="0">
                                        <field name="sport_center_id" string="Спортивный центр"/>
                                        <field name="individual_rate" string="Индивидуальная (за чел.)"/>
                                        <field name="split_rate" string="Сплит (за чел.)"/>
                                        <field name="group_rate" string="Групповая (за чел.)"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Список для личного кабинета тренера (показывает только текущего) -->
        <record id="view_trainer_personal_cabinet_list" model="ir.ui.view">
            <field name="name">trainer.personal.cabinet.list</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <list string="Личный кабинет" create="0" delete="0">
                    <field name="name"/>
                    <field name="work_email" string="Почта"/>
                    <field name="trainer_center_count" string="Количество СЦ"/>
                </list>
            </field>
        </record>

        <!-- Действие для открытия личного кабинета тренера -->
        <record id="action_trainer_my_cabinet" model="ir.actions.act_window">
            <field name="name">Личный кабинет</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_trainer_personal_cabinet_list"/>
            <field name="views" eval="[(ref('view_trainer_personal_cabinet_list'), 'list'), (ref('view_trainer_personal_cabinet_form'), 'form')]"/>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ваш личный кабинет
                </p>
            </field>
        </record>
    </data>
</odoo>


