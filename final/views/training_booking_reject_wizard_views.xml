<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- View формы wizard отклонения тренировки -->
        <record id="view_training_booking_reject_wizard_form" model="ir.ui.view">
            <field name="name">final.training.booking.reject.wizard.form</field>
            <field name="model">final.training.booking.reject.wizard</field>
            <field name="arch" type="xml">
                <form string="Отклонить тренировку">
                    <sheet>
                        <group>
                            <field name="booking_id" 
                                   options="{'no_open': True, 'no_create': True}"
                                   readonly="1"/>
                            <field name="rejection_reason" 
                                   placeholder="Укажите причину отклонения тренировки..."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_reject_confirm" 
                                string="Отклонить" 
                                type="object"
                                class="oe_highlight"
                                icon="fa-times"/>
                        <button string="Отмена" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

