<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_final_profit_report_wizard_form" model="ir.ui.view">
            <field name="name">final.profit.report.wizard.form</field>
            <field name="model">final.profit.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Отчет по прибыли в разрезе СЦ">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="center_ids" widget="many2many_tags" required="1"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <footer>
                            <button string="Сформировать PDF отчет" type="object"
                                    name="action_print_pdf" class="btn-primary"/>
                            <button string="Отмена" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_final_profit_report_wizard" model="ir.actions.act_window">
            <field name="name">Отчет по прибыли в разрезе СЦ</field>
            <field name="res_model">final.profit.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_final_profit_report_wizard_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>

