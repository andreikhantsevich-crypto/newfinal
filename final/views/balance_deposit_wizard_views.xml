<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Форма wizard пополнения баланса -->
        <record id="view_balance_deposit_wizard_form" model="ir.ui.view">
            <field name="name">final.balance.deposit.wizard.form</field>
            <field name="model">final.balance.deposit.wizard</field>
            <field name="arch" type="xml">
                <form string="Пополнение баланса">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" options="{'no_create': True}" required="1"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="current_balance" readonly="1"/>
                                <field name="new_balance" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="amount" required="1" widget="monetary"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Описание пополнения (опционально)..."/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Пополнить" name="action_deposit" type="object" class="btn-primary"/>
                        <button string="Отмена" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Действие для открытия wizard пополнения баланса -->
        <record id="action_balance_deposit_wizard" model="ir.actions.act_window">
            <field name="name">Пополнить баланс</field>
            <field name="res_model">final.balance.deposit.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>

