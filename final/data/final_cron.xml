<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron-задача для отправки напоминаний о тренировках -->
        <record id="ir_cron_final_training_reminders" model="ir.cron">
            <field name="name">Final: Напоминания о тренировках</field>
            <field name="model_id" ref="final.model_final_training_booking"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_training_reminders()</field>
            <!-- Запускаем каждые 10 минут по умолчанию -->
            <field name="interval_type">minutes</field>
            <field name="interval_number">10</field>
            <field name="active">True</field>
        </record>
        
        <!-- Cron-задача для автоматического завершения тренировок после окончания времени -->
        <record id="ir_cron_final_auto_complete_trainings" model="ir.cron">
            <field name="name">Final: Автоматическое завершение тренировок</field>
            <field name="model_id" ref="final.model_final_training_booking"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_complete_trainings()</field>
            <!-- Запускаем каждые 30 минут -->
            <field name="interval_type">minutes</field>
            <field name="interval_number">30</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>


